    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>
    <artifactId>config-server-loader</artifactId>

    <modules>
        <module>config-server-loader-common</module>
        <module>config-server-loader-resttemplate</module>
        <module>config-server-loader-webclient</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

